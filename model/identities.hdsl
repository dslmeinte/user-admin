destination "identities/definitions"

hierarchy Identity {

    id: string
    name: string

    user {
        emailAddress: string
        encryptedPassword: string
        state: userState
    }

    group {
        members: memberId -> boolean
    }

}


hierarchy UserState as-postfix {

    active {}

    confirmEmailAddress {
        token: string
    }

    passwordChangeRequested {
        token: string
    }

}

